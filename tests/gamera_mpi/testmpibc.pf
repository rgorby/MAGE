  subroutine setPreHaloData(iPeriodic,jPeriodic,kPeriodic)
      logical,intent(in) :: iPeriodic,jPeriodic,kPeriodic

      integer :: i,j,k,l,m,iIndex,jIndex,kIndex
      real(rp) :: iVal, jVal, kVal, lVal, mVal, checkVal
      integer :: iStart,iEnd,jStart,jEnd,kStart,kEnd

      ! coefficients chosen to allow easy interpretation of final values
      iVal = 1
      jVal = 20
      kVal = 400
      lVal = 8000
      mVal = 160000

      ! clear all cells
      gamAppMpi%State%Gas(:,:,:,:,:) = 0
      gamAppmpi%State%magFlux(:,:,:,:) = 0

      ! determine which cells to set values in
      ! always physical cells, ghost cells at outside borders if not periodic
      if(gamAppMpi%Grid%hasLowerBC(IDIR) .and. .not. iPeriodic) then
          iStart = gamappMpi%Grid%isg
      else
          iStart = gamAppMpi%Grid%is
      endif
      if(gamAppMpi%Grid%hasUpperBC(IDIR) .and. .not. iPeriodic) then
          iEnd = gamAppMpi%Grid%ieg
      else
          iEnd = gamAppMpi%Grid%ie
      endif
      if(gamAppMpi%Grid%hasLowerBC(JDIR) .and. .not. jPeriodic) then
          jStart = gamAppMpi%Grid%jsg
      else
          jStart = gamAppMpi%Grid%js
      endif
      if(gamAppMpi%Grid%hasUpperBC(JDIR) .and. .not. jPeriodic) then
          jEnd = gamAppMpi%Grid%jeg
      else
          jEnd = gamAppMpi%Grid%je
      endif
      if(gamAppMpi%Grid%hasLowerBC(KDIR) .and. .not. kPeriodic) then
          kStart = gamAppMpi%Grid%ksg
      else
          kStart = gamAPpMpi%Grid%ks
      endif
      if(gamAppMpi%Grid%hasUpperBC(KDIR) .and. .not. kPeriodic) then
          kEnd = gamAppMpi%Grid%keg
      else
          kEnd = gamAppMpi%Grid%ke
      endif

      do l=1,NVAR
          do m=0,gamAppMpi%Model%nSpc
              do i=iStart,iEnd
                  if(iPeriodic) then
                      iIndex = 1+modulo(i+gamAppMpi%Grid%ijkShift(IDIR)-1, gamAppMpi%Grid%Nip*gamAppMpi%Grid%NumRi)
                  else
                      iIndex = i+gamAppMpi%Grid%ijkShift(IDIR)
                  endif
                  do j=jStart,jEnd
                      if(jPeriodic) then
                          jIndex = 1+modulo(j+gamAppMpi%Grid%ijkShift(JDIR)-1, gamAppMpi%Grid%Njp*gamAppMpi%Grid%NumRj)
                      else
                          jIndex = j+gamAppMpi%Grid%ijkShift(JDIR)
                      endif
                      do k=kStart,kEnd
                          if(kPeriodic) then
                              kIndex = 1+modulo(k+gamAppMpi%Grid%ijkShift(KDIR)-1, gamAppMpi%Grid%Nkp*gamAppMpi%Grid%NumRk)
                          else
                              kIndex = k+gamAppMpi%Grid%ijkShift(KDIR)
                          endif

                          checkVal=mVal*m+lVal*l+iVal*iIndex+jVal*jIndex+kVal*kIndex
                          gamAppMpi%State%gas(i,j,k,l,m) = checkVal
                      enddo
                  enddo
              enddo
          enddo
      enddo

      ! adjust face end indices
      do l=IDIR,KDIR
          if(gamAppMpi%Grid%hasUpperBC(IDIR) .and. .not. iPeriodic) then
              if(l .eq. IDIR) then
                  iEnd = gamAppMpi%Grid%ieg+1
              else
                  iEnd = gamAppMpi%Grid%ieg
              endif
          elseif(gamAppMpi%Grid%hasUpperBC(IDIR) .and. iPeriodic .and. gamAppMpi%Grid%NumRi .eq. 1 .and. l .eq. IDIR) then
              iEnd = gamAppMpi%Grid%ie+1
          else
              iEnd = gamAppMpi%Grid%ie
          endif
          if(gamAppMpi%Grid%hasUpperBC(JDIR) .and. .not. jPeriodic) then
              if(l .eq. JDIR) then
                  jEnd = gamAppMpi%Grid%jeg+1
              else
                  jEnd = gamAppMpi%Grid%jeg
              endif
          elseif(gamAppMpi%Grid%hasUpperBC(JDIR) .and. jPeriodic .and. gamAppMpi%Grid%NumRj .eq. 1 .and. l .eq. JDIR) then
              jEnd = gamAppMpi%Grid%je+1
          else
              jEnd = gamAppMpi%Grid%je
          endif
          if(gamAppMpi%Grid%hasUpperBC(KDIR) .and. .not. kPeriodic) then
              if(l .eq. KDIR) then
                  kEnd = gamAppMpi%Grid%keg+1
              else
                  kEnd = gamAppMpi%Grid%keg
              endif
          elseif(gamAppMpi%Grid%hasUpperBC(KDIR) .and. kPeriodic .and. gamAppMpi%Grid%NumRk .eq. 1 .and. l .eq. KDIR) then
              kEnd = gamAppMpi%Grid%ke+1
          else
              kEnd = gamAppMpi%Grid%ke
          endif
          do i=iStart,iEnd
              if(iPeriodic) then
                  iIndex = 1+modulo(i+gamAppMpi%Grid%ijkShift(IDIR)-1, gamAppMpi%Grid%Nip*gamAppMpi%Grid%NumRi)
              else
                  iIndex = i+gamAppMpi%Grid%ijkShift(IDIR)
              endif
              do j=jStart,jEnd
                  if(jPeriodic) then
                      jIndex = 1+modulo(j+gamAppMpi%Grid%ijkShift(JDIR)-1, gamAppMpi%Grid%Njp*gamAppMpi%Grid%NumRj)
                  else
                      jIndex = j+gamAppMpi%Grid%ijkShift(JDIR)
                  endif
                  do k=kStart,kEnd
                      if(kPeriodic) then
                          kIndex = 1+modulo(k+gamAppMpi%Grid%ijkShift(KDIR)-1, gamAppMpi%Grid%Nkp*gamAppMpi%Grid%NumRk)
                      else
                          kIndex = k+gamAppMpi%Grid%ijkShift(KDIR)
                      endif
                      gamAppMpi%State%magFlux(i,j,k,l) = &
                          lVal*l + &
                          kVal*(kIndex) + &
                          jVal*(jIndex) + &
                          iVal*(iIndex)
                  enddo
              enddo
          enddo
      enddo

      call removeBCs(iPeriodic,jPeriodic,kPeriodic)

  end subroutine setPreHaloData

  subroutine checkCCData(this,iPeriodic,jPeriodic,kPeriodic,&
                         is,ie,js,je,ks,ke,iVal,jVal,kVal,lVal,mVal)
      class (MpiTestMethod), intent(inout) :: this
      logical,intent(in) :: iPeriodic,jPeriodic,kPeriodic
      integer,intent(in) :: is,ie,js,je,ks,ke
      real(rp),intent(in) :: iVal,jVal,kVal,lVal,mVal

      integer :: i,j,k,l,m,iIndex,jIndex,kIndex
      real(rp) :: checkVal
      character(len=strLen) :: checkMsg

      do l=1,NVAR
          do m=0,gamAppMpi%Model%nSpc
              do i=is,ie
                  if(iPeriodic) then
                      iIndex = 1+modulo(i+gamAppMpi%Grid%ijkShift(IDIR)-1, gamAppMpi%Grid%Nip*gamAppMpi%Grid%NumRi)
                  else
                      iIndex = i+gamAppMpi%Grid%ijkShift(IDIR)
                  endif
                  do j=js,je
                      if(jPeriodic) then
                          jIndex = 1+modulo(j+gamAppMpi%Grid%ijkShift(JDIR)-1, gamAppMpi%Grid%Njp*gamAppMpi%Grid%NumRj)
                      else
                          jIndex = j+gamAppMpi%Grid%ijkShift(JDIR)
                      endif
                      do k=ks,ke
                          if(kPeriodic) then
                              kIndex = 1+modulo(k+gamAppMpi%Grid%ijkShift(KDIR)-1, gamAppMpi%Grid%Nkp*gamAppMpi%Grid%NumRk)
                          else
                              kIndex = k+gamAppMpi%Grid%ijkShift(KDIR)
                          endif

                          checkVal=mVal*m+lVal*l+iVal*iIndex+jVal*jIndex+kVal*kIndex

                          write (checkMsg,'(I0,A,I0,A,I0,A,I0,A,I0,A,I0,A)') this%getNumProcesses(),' processor wrong at (',i,',',j,',',k,',',l,',',m,')'
                          @assertEqual(checkVal,gamAppMpi%State%gas(i,j,k,l,m),trim(checkMsg))
                      enddo
                  enddo
              enddo
          enddo
      enddo

  end subroutine

  subroutine checkFCData(this,iPeriodic,jPeriodic,kPeriodic,&
                         is,ie,js,je,ks,ke,iVal,jVal,kVal,lVal)
      class (MpiTestMethod), intent(inout) :: this
      logical,intent(in) :: iPeriodic,jPeriodic,kPeriodic
      integer,intent(in) :: is,ie,js,je,ks,ke
      real(rp),intent(in) :: iVal,jVal,kVal,lVal

      integer :: i,j,k,l,iIndex,jIndex,kIndex
      real(rp) :: checkVal
      character(len=strLen) :: checkMsg

      l=IDIR
      do i=is,ie+1
          if(iPeriodic) then
              iIndex = 1+modulo(i+gamAppMpi%Grid%ijkShift(IDIR)-1, gamAppMpi%Grid%Nip*gamAppMpi%Grid%NumRi)
          else
              iIndex = i+gamAppMpi%Grid%ijkShift(IDIR)
          endif
          do j=js,je
              if(jPeriodic) then
                  jIndex = 1+modulo(j+gamAppMpi%Grid%ijkShift(JDIR)-1, gamAppMpi%Grid%Njp*gamAppMpi%Grid%NumRj)
              else
                  jIndex = j+gamAppMpi%Grid%ijkShift(JDIR)
              endif
              do k=ks,ke
                  if(kPeriodic) then
                      kIndex = 1+modulo(k+gamAppMpi%Grid%ijkShift(KDIR)-1, gamAppMpi%Grid%Nkp*gamAppMpi%Grid%NumRk)
                  else
                      kIndex = k+gamAppMpi%Grid%ijkShift(KDIR)
                  endif
                  checkVal = lVal*l + &
                      iVal*iIndex + &
                      jVal*jIndex + &
                      kVal*kIndex
                  write (checkMsg,'(I0,A,I0,A,I0,A,I0,A,I0,A)') this%getNumProcesses(),' processor wrong at (',i,',',j,',',k,',',l,')'
                  @assertEqual(checkVal, gamAppMpi%State%magFlux(i,j,k,l), trim(checkMsg))
              enddo
          enddo
      enddo
      l=JDIR
      do i=is,ie
          if(iPeriodic) then
              iIndex = 1+modulo(i+gamAppMpi%Grid%ijkShift(IDIR)-1, gamAppMpi%Grid%Nip*gamAppMpi%Grid%NumRi)
          else
              iIndex = i+gamAppMpi%Grid%ijkShift(IDIR)
          endif
          do j=js,je+1
              if(jPeriodic) then
                  jIndex = 1+modulo(j+gamAppMpi%Grid%ijkShift(JDIR)-1, gamAppMpi%Grid%Njp*gamAppMpi%Grid%NumRj)
              else
                  jIndex = j+gamAppMpi%Grid%ijkShift(JDIR)
              endif
              do k=ks,ke
                  if(kPeriodic) then
                      kIndex = 1+modulo(k+gamAppMpi%Grid%ijkShift(KDIR)-1, gamAppMpi%Grid%Nkp*gamAppMpi%Grid%NumRk)
                  else
                      kIndex = k+gamAppMpi%Grid%ijkShift(KDIR)
                  endif
                  checkVal = lVal*l + &
                      iVal*iIndex + &
                      jVal*jIndex + &
                      kVal*kIndex
                  write (checkMsg,'(I0,A,I0,A,I0,A,I0,A,I0,A)') this%getNumProcesses(),' processor wrong at (',i,',',j,',',k,',',l,')'
                  @assertEqual(checkVal, gamAppMpi%State%magFlux(i,j,k,l), trim(checkMsg))
              enddo
          enddo
      enddo
      l=KDIR
      do i=is,ie
          if(iPeriodic) then
              iIndex = 1+modulo(i+gamAppMpi%Grid%ijkShift(IDIR)-1, gamAppMpi%Grid%Nip*gamAppMpi%Grid%NumRi)
          else
              iIndex = i+gamAppMpi%Grid%ijkShift(IDIR)
          endif
          do j=js,je
              if(jPeriodic) then
                  jIndex = 1+modulo(j+gamAppMpi%Grid%ijkShift(JDIR)-1, gamAppMpi%Grid%Njp*gamAppMpi%Grid%NumRj)
              else
                  jIndex = j+gamAppMpi%Grid%ijkShift(JDIR)
              endif
              do k=ks,ke+1
                  if(kPeriodic) then
                      kIndex = 1+modulo(k+gamAppMpi%Grid%ijkShift(KDIR)-1, gamAppMpi%Grid%Nkp*gamAppMpi%Grid%NumRk)
                  else
                      kIndex = k+gamAppMpi%Grid%ijkShift(KDIR)
                  endif
                  checkVal = lVal*l + &
                      iVal*iIndex + &
                      jVal*jIndex + &
                      kVal*kIndex
                  write (checkMsg,'(I0,A,I0,A,I0,A,I0,A,I0,A)') this%getNumProcesses(),' processor wrong at (',i,',',j,',',k,',',l,')'
                  @assertEqual(checkVal, gamAppMpi%State%magFlux(i,j,k,l), trim(checkMsg))
              enddo
          enddo
      enddo

  end subroutine

  subroutine checkPostHaloData(this,iPeriodic,jPeriodic,kPeriodic)
      class (MpiTestMethod), intent(inout) :: this
      logical,intent(in) :: iPeriodic,jPeriodic,kPeriodic

      integer :: i,j,k,l,m,iIndex,jIndex,kIndex
      real(rp) :: iVal, jVal, kVal, lVal, mVal, checkVal
      character(len=strLen) :: checkMsg

      ! coefficients chosen to allow easy interpretation of final values
      iVal = 1
      jVal = 20
      kVal = 400
      lVal = 8000
      mVal = 160000

      ! check Gas, faces and edges but not corners, so do dimensions in pairs
      call checkCCData(this,iPeriodic,jPeriodic,kPeriodic,&
                       gamAppMpi%Grid%isg,gamAppMpi%Grid%ieg,&
                       gamAppMpi%Grid%jsg,gamAppMpi%Grid%jeg,&
                       gamAppMpi%Grid%ks,gamAppMpi%Grid%ke,&
                       iVal,jVal,kVal,lVal,mVal)
      call checkCCData(this,iPeriodic,jPeriodic,kPeriodic,&
                       gamAppMpi%Grid%isg,gamAppMpi%Grid%ieg,&
                       gamAppMpi%Grid%js,gamAppMpi%Grid%je,&
                       gamAppMpi%Grid%ksg,gamAppMpi%Grid%keg,&
                       iVal,jVal,kVal,lVal,mVal)
      call checkCCData(this,iPeriodic,jPeriodic,kPeriodic,&
                       gamAppMpi%Grid%is,gamAppMpi%Grid%ie,&
                       gamAppMpi%Grid%jsg,gamAppMpi%Grid%jeg,&
                       gamAppMpi%Grid%ksg,gamAppMpi%Grid%keg,&
                       iVal,jVal,kVal,lVal,mVal)

      ! check mag flux, faces but not corners or edges, so do dimensions one by one
      call checkFCData(this,iPeriodic,jPeriodic,kPeriodic,&
                       gamAppMpi%Grid%isg,gamAppMpi%Grid%ieg,&
                       gamAppMpi%Grid%js,gamAppMpi%Grid%je,&
                       gamAppMpi%Grid%ks,gamAppMpi%Grid%ke,&
                       iVal,jVal,kVal,lVal)
      call checkFCData(this,iPeriodic,jPeriodic,kPeriodic,&
                       gamAppMpi%Grid%is,gamAppMpi%Grid%ie,&
                       gamAppMpi%Grid%jsg,gamAppMpi%Grid%jeg,&
                       gamAppMpi%Grid%ks,gamAppMpi%Grid%ke,&
                       iVal,jVal,kVal,lVal)
      call checkFCData(this,iPeriodic,jPeriodic,kPeriodic,&
                       gamAppMpi%Grid%is,gamAppMpi%Grid%ie,&
                       gamAppMpi%Grid%js,gamAppMpi%Grid%je,&
                       gamAppMpi%Grid%ksg,gamAppMpi%Grid%keg,&
                       iVal,jVal,kVal,lVal)

  end subroutine checkPostHaloData

  subroutine removeBCs(iPeriodic,jPeriodic,kPeriodic)
      logical,intent(in) :: iPeriodic,jPeriodic,kPeriodic

      if(.not. iPeriodic) then
          deallocate(gamAppMpi%Grid%externalBCs(INI)%p)
          deallocate(gamAppMpi%Grid%externalBCs(OUTI)%p)
          allocate(gamAppMpi%Grid%externalBCs(INI)%p,source=mpiNullBc_T(INI))
          allocate(gamAppMpi%Grid%externalBCs(OUTI)%p,source=mpiNullBc_T(OUTI))
      endif

      if(.not. jPeriodic) then
          deallocate(gamAppMpi%Grid%externalBCs(INJ)%p)
          deallocate(gamAppMpi%Grid%externalBCs(OUTJ)%p)
          allocate(gamAppMpi%Grid%externalBCs(INJ)%p,source=mpiNullBc_T(INJ))
          allocate(gamAppMpi%Grid%externalBCs(OUTJ)%p,source=mpiNullBc_T(OUTJ))
      endif

      if(.not. kPeriodic) then
          deallocate(gamAppMpi%Grid%externalBCs(INK)%p)
          deallocate(gamAppMpi%Grid%externalBCs(OUTK)%p)
          allocate(gamAppMpi%Grid%externalBCs(INK)%p,source=mpiNullBc_T(INK))
          allocate(gamAppMpi%Grid%externalBCs(OUTK)%p,source=mpiNullBc_T(OUTK))
      endif

  end subroutine removeBCs

